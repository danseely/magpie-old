<% if @user.errors.any? %>

  <div class='error'>
    <ul>
      <% @user.errors.full_messages.each do |m| %>
        <li><%= m %></li>
      <% end %>
    </ul>
  </div>

<% end %>

<h1>New User</h1>

<%= form_for @user do |f| %>
  <div class='field'>
    <%= f.label :email, 'Email' %>
    <%= f.text_field :email %>
  </div>

  <div class='field'>
    <%= f.label :username, 'Username' %>
    <%= f.text_field :username %>
  </div>

  <div class='field'>
    <%= f.label :password, 'Password' %>
    <%= f.text_field :password %>
  </div>

  <div class='field'>
    <%= f.label :password_confirmation, 'Confirm Password' %>
    <%= f.text_field :password_confirmation %>
  </div>

  <div class='actions'>
    <%= f.submit %>
  </div>
<% end %>